{
  "name": "__PROJECT-api",
  "version": "1.0.0",
  "description": "__ABOUT",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc --noEmit && esbuild src/server.ts --outdir=build --bundle --platform=node --packages=external --minify --format=esm",
    "start": "node build/server.js",
    "start-local": "PORT=3000 DATABASE_URL=postgres://postgres:password@localhost/database node build/server.js",
    "lint.es": "echo 'TODO'",
    "lint.commit": "echo 'TODO'",
    "test": "jest --passWithNoTests",
    "prettier.fix": "prettier --write --ignore-unknown .",
    "prettier.check": "prettier --check --ignore-unknown ."
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/__OWNER/__REPOSITORY.git"
  },
  "keywords": [
    "__PROJECT",
    "api"
  ],
  "author": "__OWNER",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/__OWNER/__REPOSITORY/issues"
  },
  "homepage": "https://github.com/__OWNER/__REPOSITORY#readme",
  "dependencies": {
    "@fastify/postgres": "^5.2.0",
    "fastify": "^4.17.0",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@rimac-technology/semantic-release-ecr": "^1.2.0",
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node-lts": "^18.12.2",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.4",
    "@types/pg": "^8.6.6",
    "esbuild": "^0.17.19",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@rimac-technology/semantic-release-ecr",
        {
          "buildImage": "docker build . -t __SERVICE",
          "imageName": "__SERVICE"
        }
      ]
    ]
  }
}
